include(OwlVersion.cmake)

# name is needed by common definitions, so declare it first
set(CPACK_PACKAGE_NAME "owl-console")
set(CPACK_PACKAGE_DESCRIPTION_SUMMARY "OwlConsole CPACK_PACKAGE_DESCRIPTION_SUMMARY")
set(CPACK_PACKAGE_DESCRIPTION "OwlConsole CPACK_PACKAGE_DESCRIPTION")

include(OwlPackage.cmake)
set(CPACK_INSTALL_CMAKE_PROJECTS "@CMAKE_BINARY_DIR@;Owl;OwlConsole;/")
set(CPACK_RESOURCE_FILE_LICENSE "@CMAKE_SOURCE_DIR@/src/CPack/license.txt")

set(CPACK_BUNDLE_NAME "OwlConsole")
set(CPACK_PACKAGE_FILE_NAME "owl-console-${CPACK_PACKAGE_VERSION}")
message("FILENAME: ${CPACK_PACKAGE_FILE_NAME}")
# set(CPACK_CMAKE_GENERATOR "Unix Makefiles")

# Configuration for installation type "Developer"
LIST(APPEND CPACK_ALL_INSTALL_TYPES Full)
SET(CPACK_INSTALL_TYPE_FULL_DISPLAY_NAME "Full")

SET(CPACK_COMPONENTS_ALL OwlConsole)

SET(CPACK_COMPONENT_GROUP_OWLCONSOLE_EXPANDED TRUE)

SET(CPACK_COMPONENT_OWLCONSOLE_DISPLAY_NAME "OWL DISPLAY")
SET(CPACK_COMPONENT_OWLCONSOLE_DESCRIPTION "Owl Utility")
SET(CPACK_COMPONENT_OWLCONSOLE_GROUP OwlConsole)
SET(CPACK_COMPONENT_OWLCONSOLE_INSTALL_TYPES Full)
	
# Component deps for SDK builds are needed for Windows only
set(CPACK_COMPONENT_OWLCONSOLE_DEPENDS Runtime)